@using EPiServer.Core
@using EPiServer.Web.Mvc.Html
@using Adage.EpiStarterKit.ModelPartials.Models.Blocks
@using Adage.EpiStarterKit.ViewModelPartials.ViewModels.Blocks
@using Adage.EpiStarterKit.ModelPartials.Static


@model IAccordionContainerBlockViewModel


<section class="adage-block">
    <div class="adage-block-inner adage-accordion">
        <h2 class="adage-block-heading adage-accordion-heading">@Html.PropertyFor(m => m.CurrentBlock.Title)</h2>
        <ul class="adage-accordion-inner" data-accordion-list="@Model.CurrentBlock.ContentLinkID" aria-label="Accordion Control Group Buttons" @Html.EditAttributes(m =>m.CurrentBlock.AccordionContentArea)>
            @foreach (var item in Model.AccordionViewModelItems)
            {
                @Html.Partial("/Views/AdageViews/Shared/AccordionItem.cshtml", item) 
            }
        </ul>
    </div>
</section>

