@using EPiServer.Core
@using EPiServer.Web.Mvc.Html
@using Adage.EpiStarterKit.ModelPartials.Models.Blocks
@using Adage.EpiStarterKit.ViewModelPartials.ViewModels.Blocks
@using Adage.EpiStarterKit.ViewModelPartials.Pocos

@model IBlockViewModel<StaffInfoItemBlock>

@{ Layout = "~/Views/AdageViews/Shared/Layouts/_BlockPreview.cshtml"; }

<section class="adage-block">
    <div class="adage-block-inner adage-staff">
        <div class="adage-staff-container">
            @{
                Html.RenderPartial("/Views/AdageViews/Shared/StaffInfoItem.cshtml",
                    new StaffInfoViewItem
                    {
                        StaffImage = Model.CurrentBlock.StaffImage,
                        StaffInfo = Model.CurrentBlock.StaffInfo,
                        StaffName = Model.CurrentBlock.StaffName,
                        StaffRole = Model.CurrentBlock.StaffRole,
                        HideImage = false
                    });
            }
        </div>
    </div>
</section>
